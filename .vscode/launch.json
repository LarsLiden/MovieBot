    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Empty Bot",
            "program": "${workspaceFolder}/lib/server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "MovieBot",
            "program": "${workspaceFolder}/lib/YCmoviebot.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Conversation Learner UI",
            "program": "${workspaceFolder}/lib/ui.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Empty App with Fiddler",
            "program": "${workspaceFolder}/lib/server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "env": {
                "https_proxy": "http://127.0.0.1:8888",
                "http_proxy": "http://127.0.0.1:8888",
                "NODE_TLS_REJECT_UNAUTHORIZED": "0"
            }
        }
    ]
}